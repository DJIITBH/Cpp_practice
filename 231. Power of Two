class Solution {
public:
    bool isPowerOfTwo(int n) {
        int bit=0,count=0;
        if(n<=0)
        {
            return false;
        }
        while(n!=0)
        {
            bit=n&1;
            if(bit==1)
            {
                count++;
            }
            n=n>>1;
        }
        if(count==1)
        {
            return true;
        }
        else{
            return false;
        }
    }
};
